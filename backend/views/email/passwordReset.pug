extends base

block content
    p Hi #{firstName},
    p You requested a password reset. Click the link below to reset your password:
    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
        tbody
            tr
                td(align='left')
                    table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                        tbody
                            tr
                                td
                                    a(href=`${url}`, target='_blank') Reset your password
    p This link is valid for 10 minutes.
    p If you didn't request this, please ignore this email.
